---
import { site } from '../config/site';
import { getTranslations } from '../config/i18n';

const currentLang = 'es';
const t = getTranslations(currentLang);

const currentYear = new Date().getFullYear();
const whatsappLink = `https://wa.me/${site.whatsappNumber}`;
const emailLink = `mailto:${site.email}`;
---

<footer class="bg-[#0A0A0A] border-t border-cyan-500/20 relative overflow-hidden">
  <!-- Background glow -->
  <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-96 h-96 bg-cyan-500 rounded-full blur-[150px] opacity-10"></div>
  
  <div class="max-w-7xl mx-auto px-4 md:px-6 py-12 md:py-16 lg:py-20 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-12 mb-12 md:mb-16">
      <!-- Brand + Disclaimer -->
      <div class="lg:col-span-2">
        <div class="mb-6">
          <div class="flex items-center gap-4 mb-4">
            <img
              src="/logo_flujo.png"
              alt="Logo Flujo TV"
              width="56"
              height="56"
              class="h-14 w-14 object-contain opacity-95"
              loading="lazy"
            />
            <div>
              <div class="text-lg md:text-xl font-extrabold leading-none text-cyan-400">FLUJO TV</div>
              <div class="mt-1 text-xs md:text-sm font-medium text-white/70" data-i18n="footer.distributor">{t.footer.distributor}</div>
            </div>
          </div>

          <p class="text-gray-400 leading-relaxed mb-6 text-sm md:text-base" data-i18n="footer.disclaimer">
            {t.footer.disclaimer}
          </p>
          
          <!-- Contact info -->
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-cyan-500/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <a href={emailLink} class="text-gray-300 hover:text-cyan-400 transition-colors text-sm md:text-base">{site.email}</a>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-cyan-500/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-cyan-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
              </div>
              <a href={whatsappLink} target="_blank" class="text-gray-300 hover:text-cyan-400 transition-colors text-sm md:text-base">+{site.whatsappNumber}</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="text-white font-bold text-base md:text-lg mb-4">Navegación</h4>
        <ul class="space-y-3">
          <li><a href="/" class="text-gray-400 hover:text-cyan-400 transition-colors duration-300 text-sm md:text-base" data-i18n="nav.home">{t.nav.home}</a></li>
          <li><a href="/#benefits" class="text-gray-400 hover:text-cyan-400 transition-colors duration-300 text-sm md:text-base" data-i18n="nav.benefits">{t.nav.benefits}</a></li>
          <li><a href="/#how-it-works" class="text-gray-400 hover:text-cyan-400 transition-colors duration-300 text-sm md:text-base" data-i18n="nav.howItWorks">{t.nav.howItWorks}</a></li>
          <li><a href="/#plans" class="text-gray-400 hover:text-cyan-400 transition-colors duration-300 text-sm md:text-base" data-i18n="nav.plans">{t.nav.plans}</a></li>
          <li><a href="/#faq" class="text-gray-400 hover:text-cyan-400 transition-colors duration-300 text-sm md:text-base" data-i18n="nav.faq">{t.nav.faq}</a></li>
          <li><a href="/#download" class="text-gray-400 hover:text-cyan-400 transition-colors duration-300 text-sm md:text-base" data-i18n="nav.download">{t.nav.download}</a></li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h4 class="text-white font-bold text-base md:text-lg mb-4">Legal</h4>
        <ul class="space-y-3">
          <li><a href="/terms" class="text-gray-400 hover:text-cyan-400 transition-colors duration-300 text-sm md:text-base" data-i18n="footer.terms">{t.footer.terms}</a></li>
          <li><a href="/privacy" class="text-gray-400 hover:text-cyan-400 transition-colors duration-300 text-sm md:text-base" data-i18n="footer.privacy">{t.footer.privacy}</a></li>
        </ul>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-gray-800 pt-6 md:pt-8">
      <div class="text-center">
        <p class="text-gray-500 text-xs md:text-sm">
          © {currentYear} {site.brand}. Todos los derechos reservados.
        </p>
      </div>
    </div>
  </div>
</footer>
