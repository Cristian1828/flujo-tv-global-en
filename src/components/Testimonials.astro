---
import { site } from '../config/site';
import { getTranslations } from '../config/i18n';

const currentLang = 'es';
const t = getTranslations(currentLang);
---

<section class="testimonials section">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <h2 class="section-title" data-i18n="testimonials.title">{t.testimonials.title}</h2>
      <p class="section-subtitle" data-i18n="testimonials.subtitle">{t.testimonials.subtitle}</p>
    </div>
    
    <!-- Testimonials Grid -->
    <div class="testimonials-grid">
      {site.testimonials.map((testimonial) => (
        <div class="testimonial-card card card-glass">
          <div class="testimonial-rating">
            {[...Array(testimonial.rating)].map(() => (
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            ))}
          </div>
          
          <p class="testimonial-comment" data-i18n={`testimonial.${testimonial.id}.comment`}>
            "{testimonial.comment.es}"
          </p>
          
          <div class="testimonial-author">
            <div class="author-avatar">
              {testimonial.name.charAt(0)}
            </div>
            <div class="author-info">
              <div class="author-name">{testimonial.name}</div>
              <div class="author-location">{testimonial.location}</div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials {
    background: var(--color-dark-secondary);
  }
  
  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--space-3xl);
  }
  
  .section-title {
    font-size: var(--text-3xl);
    font-weight: 800;
    margin-bottom: var(--space-md);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--color-gray-light);
  }
  
  .testimonials-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .testimonial-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }
  
  .testimonial-rating {
    display: flex;
    gap: 0.25rem;
  }
  
  .testimonial-rating svg {
    color: var(--color-warning);
  }
  
  .testimonial-comment {
    font-size: var(--text-base);
    line-height: 1.6;
    color: var(--color-light);
    font-style: italic;
    flex-grow: 1;
  }
  
  .testimonial-author {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding-top: var(--space-md);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .author-avatar {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-full);
    background: var(--gradient-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-light);
    flex-shrink: 0;
  }
  
  .author-info {
    flex-grow: 1;
  }
  
  .author-name {
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-light);
    margin-bottom: 0.25rem;
  }
  
  .author-location {
    font-size: var(--text-sm);
    color: var(--color-gray-light);
  }
  
  @media (min-width: 768px) {
    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .testimonials-grid {
      grid-template-columns: repeat(4, 1fr);
    }
    
    .section-title {
      font-size: var(--text-4xl);
    }
  }
</style>
