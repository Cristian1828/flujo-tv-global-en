<style>
  .pricing-section {
    background: linear-gradient(180deg, #0a0e27 0%, #1a1f3a 100%);
    padding: 80px 0;
    position: relative;
  }

  .pricing-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .pricing-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 20px;
    background: rgba(168, 85, 247, 0.1);
    border: 1px solid rgba(168, 85, 247, 0.3);
    border-radius: 100px;
    color: #a855f7;
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .section-title {
    font-size: clamp(28px, 4vw, 48px);
    font-weight: 800;
    color: #ffffff;
    line-height: 1.3;
    margin-bottom: 16px;
  }

  .title-highlight {
    display: block;
    font-size: clamp(16px, 2vw, 20px);
    font-weight: 400;
    color: rgba(255, 255, 255, 0.7);
    margin-top: 12px;
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
    margin-bottom: 40px;
  }

  .pricing-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 32px 24px;
    position: relative;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .pricing-card:hover {
    transform: translateY(-4px);
    border-color: rgba(0, 217, 255, 0.4);
    box-shadow: 0 20px 40px rgba(0, 217, 255, 0.15);
  }

  .pricing-card.recommended {
    border-color: rgba(168, 85, 247, 0.5);
    background: rgba(168, 85, 247, 0.05);
  }

  .pricing-card.recommended:hover {
    border-color: rgba(168, 85, 247, 0.7);
    box-shadow: 0 20px 40px rgba(168, 85, 247, 0.2);
  }

  .recommended-badge,
  .bonus-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    padding: 6px 16px;
    background: linear-gradient(135deg, #a855f7, #ec4899);
    color: #ffffff;
    font-size: 13px;
    font-weight: 800;
    border-radius: 100px;
    white-space: nowrap;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .bonus-badge {
    background: linear-gradient(135deg, #00d9ff, #0066ff);
  }

  .bonus-badge.best {
    background: linear-gradient(135deg, #10b981, #059669);
    font-size: 13px;
  }

  .card-header {
    margin-bottom: 20px;
  }

  .plan-name {
    font-size: 24px;
    font-weight: 800;
    color: #ffffff;
    margin-bottom: 4px;
  }

  .plan-subtitle {
    font-size: 11px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .card-price {
    display: flex;
    align-items: baseline;
    gap: 4px;
    margin-bottom: 8px;
  }

  .currency {
    font-size: 24px;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.7);
  }

  .amount {
    font-size: 56px;
    font-weight: 900;
    background: linear-gradient(135deg, #00d9ff, #a855f7);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .period {
    font-size: 16px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.5);
  }

  .plan-duration {
    font-size: 13px;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 24px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .features-list {
    list-style: none;
    padding: 0;
    margin: 0 0 32px 0;
    flex-grow: 1;
  }

  .features-list li {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    padding: 10px 0;
    color: rgba(255, 255, 255, 0.8);
    font-size: 14px;
    line-height: 1.5;
  }

  .features-list svg {
    width: 18px;
    height: 18px;
    color: #00ff88;
    flex-shrink: 0;
    margin-top: 2px;
  }

  /* Default state - only recommended has gradient */
  .card-cta {
    display: block;
    width: 100%;
    padding: 14px 24px;
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    color: #ffffff;
    font-size: 15px;
    font-weight: 700;
    text-align: center;
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .recommended .card-cta {
    background: linear-gradient(135deg, #a855f7, #ec4899);
    border: none;
  }

  /* Hover states */
  .pricing-card:hover .card-cta {
    background: linear-gradient(135deg, #a855f7, #ec4899);
    border: none;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(168, 85, 247, 0.3);
  }

  /* When hovering any card, remove gradient from recommended */
  .pricing-grid:has(.pricing-card:hover) .recommended .card-cta {
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    transform: none;
    box-shadow: none;
  }

  /* But restore it when hovering the recommended itself */
  .recommended:hover .card-cta {
    background: linear-gradient(135deg, #a855f7, #ec4899) !important;
    border: none !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 10px 30px rgba(168, 85, 247, 0.4) !important;
  }

  .pricing-footer {
    text-align: center;
    padding-top: 20px;
  }

  .pricing-footer p {
    color: rgba(255, 255, 255, 0.6);
    font-size: 14px;
  }

  .pricing-footer a {
    color: #00d9ff;
    font-weight: 600;
    text-decoration: none;
  }

  .pricing-footer a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .pricing-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
